# all accounts
defaults
port 587
auth on
tls on
tls_starttls on
tls_trust_file /usr/local/share/ca-certificates/cacert.pem

# account 1: personal gmail
account personal
host smtp.gmail.com
domain smtp.gmail.com
from christian.a.romney@gmail.com
user christian.a.romney@gmail.com
passwordeval gpg2 -q --no-tty --for-your-eyes-only -d ~/.authinfo.gpg | awk -F ' ' '/smtp\.gmail\.com/ {print $NF; exit;}'
logfile /var/log/mail.log
account default : personal
